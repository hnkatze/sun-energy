---
// contact.astro
import ContactForm from "../components/ContactForm.astro";
import Map from "../components/Map.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section class="py-20 ">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Encabezado -->
      <div class="text-center mb-16 space-y-4">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900">
          <span
            class="bg-gradient-to-r from-[#0085c5] to-[#00c8d0] bg-clip-text text-transparent"
          >
            Contáctanos
          </span>
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          ¿Listo para comenzar tu proyecto solar? Escríbenos o visítanos.
        </p>
      </div>

      <!-- Grid de 2 columnas -->
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <!-- Formulario -->
        <div
          class="bg-white rounded-2xl shadow-xl p-8 sm:p-10 border border-gray-100"
        >
          <h2 class="text-2xl font-bold text-gray-900 mb-6">
            Envíanos un mensaje
          </h2>
          <ContactForm />
        </div>

        <!-- Información de contacto -->
        <div class="space-y-8">
          <!-- Tarjeta de contacto -->
          <div
            class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100"
          >
            <h3 class="text-xl font-bold text-[#0085c5] mb-4">
              Información de contacto
            </h3>

            <div class="space-y-4">
              <div class="flex items-start gap-4">
                <div class="bg-[#00c8d0]/10 p-3 rounded-full">
                  <svg
                    class="w-6 h-6 text-[#0085c5]"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">Oficina principal</h4>
                  <p class="text-gray-600">
                    San Pedro Sula, Barrio Suyapa, 16 Avenida entre 7 y 6 Calle
                    S.O.
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="bg-[#00c8d0]/10 p-3 rounded-full">
                  <svg
                    class="w-6 h-6 text-[#0085c5]"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 5z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">Teléfono</h4>
                  <a
                    href="tel:+50489881983"
                    class="text-gray-600 hover:text-[#0085c5] transition-colors"
                    >+504 8988-1983</a
                  >
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="bg-[#00c8d0]/10 p-3 rounded-full">
                  <svg
                    class="w-6 h-6 text-[#0085c5]"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">
                    Correo electrónico
                  </h4>
                  <a
                    href="mailto:info@sunergy.hn"
                    class="text-gray-600 hover:text-[#0085c5] transition-colors"
                    >info@sunergy.hn</a
                  >
                </div>
              </div>
            </div>
          </div>

          <!-- Mapa -->
          <div
            class="rounded-2xl overflow-hidden shadow-xl border border-gray-100 h-96"
          >
            <Map
              lat="15.502634566120538"
              lng="-88.03658828609571"
              title="Sunergy Honduras"
            />
          </div>

          <!-- Horario -->
          <div
            class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100"
          >
            <h3 class="text-xl font-bold text-[#0085c5] mb-4">
              Horario de atención
            </h3>
            <ul class="space-y-3">
              <li class="flex justify-between text-gray-600">
                <span>Lunes - Viernes</span>
                <span class="font-medium">8:00 AM - 5:00 PM</span>
              </li>
              <li class="flex justify-between text-gray-600">
                <span>Sábados</span>
                <span class="font-medium">9:00 AM - 1:00 PM</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
